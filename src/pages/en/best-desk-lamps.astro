        </div>
      ))}
    </div>
  </section>

  <!-- Products -->
  <section class="space-y-10 mb-12">
    <h2 class="font-display text-2xl font-bold text-ink">Detailed Reviews</h2>
    {products.map(product => (
      <ProductCard
        rank={product.rank}
        badge={product.badge}
        brand={product.brand}
        name={product.name}
        asin={product.asin}
        affiliateTag={AFFILIATE_TAG}
