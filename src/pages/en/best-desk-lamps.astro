const schema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'Best Desk Lamps for Home Office 2026',
  numberOfItems: products.length,
  itemListElement: products.map((p, i) => ({
    '@type': 'ListItem',
    position: i + 1,
